<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".InterfaceServiceProvider.LogInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="97dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="LIVE ARTIST"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="97dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/kk" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="331dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:background="@drawable/shapeslogintext"
        android:gravity="center"
        android:text="مقدم الخدمة(تسجيل دخول)"
        android:textColorHint="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:orientation="vertical"
        android:padding="15dp">

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/shapeloginedittext"
            android:ems="10"
            android:gravity="right|center"
            android:hint="إسم المستخدم"
            android:inputType="textPersonName"
            android:textColorHint="@color/colorPrimary" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="60dp"
            android:background="@drawable/shapeloginedittext"
            android:ems="10"
            android:gravity="right|center"
            android:hint="كلمة المرور"
            android:inputType="textPassword"
            android:textColorHint="@color/colorPrimary" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="right"
            android:background="@drawable/shapecheckboxinlogin"
            android:layout_marginRight="5dp"
            android:text="إظهار الرقم السرى" />
    </LinearLayout>

        <Button
            android:id="@+id/button_login"
            android:layout_width="101dp"
            android:layout_height="59dp"
            android:layout_below="@+id/linear_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/shapemainbutton"
            android:padding="15dp"
            android:text="دخول"
            android:textColorHint="@color/colorPrimary"
            android:textColorLink="@color/colorPrimary"
            android:textSize="18sp" />
    <TextView
        android:id="@+id/text_register"
        android:layout_width="176dp"
        android:layout_height="47dp"
        android:layout_below="@+id/button_login"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shapemainbutton"
        android:gravity="center"
        android:text="إنشاء حساب جديد؟"
        android:textSize="20dp" />

    </RelativeLayout>
</ScrollView>
