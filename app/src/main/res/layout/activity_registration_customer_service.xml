<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".InterfaceCustomerService.RegistrationCustomerServiceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="97dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="LIVE ARTIST"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="97dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="86dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/kk" />

        <TextView
            android:id="@+id/usertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginStart="100dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="تسجيل عضو جديد"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textViewuser"
            android:layout_width="174dp"
            android:layout_height="60dp"
            android:layout_below="@+id/usertext"
            android:layout_marginStart="110dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="طالب خدمة"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/editTextfirstnameuser"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="204dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:hint="الأسم الأول"
            android:gravity="right"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextlastnameuser"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="204dp"
            android:ems="10"
            android:gravity="right"
            android:hint="الإسم الأخير"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/editTextfirstnameuser">

            <EditText
                android:id="@+id/editTextemailuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:hint="البريد الإلكترونى"
                android:inputType="textEmailAddress" />
            <EditText
                android:id="@+id/editTextpassworduser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:ems="10"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="right"
                android:inputType="textPassword"
                android:hint="كلمة المرور" />

            <EditText
                android:id="@+id/editTextnumberphoneuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="right"
                android:inputType="text|phone"
                android:gravity="right"
                android:hint="رقم التليفون" />

            <Button
                android:id="@+id/button_registeruser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="130dp"
                android:layout_marginBottom="38dp"
                android:text="دخول" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>