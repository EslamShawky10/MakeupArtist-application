<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterfaceServiceProvider.RegisterActivity">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageGallery"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="220dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="تسجيل عضو جديد"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/shapecheckboxinlogin"/>

      <LinearLayout
          android:id="@+id/linear"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/imageGallery"
          android:orientation="vertical"
          android:padding="15dp">


          <EditText
              android:id="@+id/edit_fullname"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shapeedittextregistration"
              android:ems="10"
              android:hint="الإسم رباعى"
              android:inputType="textPersonName"
              android:textColor="@color/colorPrimary"
              android:textColorHint="@color/colorPrimary" />

          <EditText
              android:id="@+id/edit_user_reg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shapeedittextregistration"
              android:ems="10"
              android:hint="إسم المستخدم"
              android:inputType="textPersonName"
              android:textColor="@color/colorPrimary"
              android:textColorHint="@color/colorPrimary" />

          <EditText
              android:id="@+id/edit_password_reg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shapeedittextregistration"
              android:ems="10"
              android:hint="كلمة المرور"
              android:textColorHint="@color/colorPrimary" />

          <EditText
              android:id="@+id/edit_email"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shapeedittextregistration"
              android:ems="10"
              android:hint="البريد الإلكترونى"
              android:inputType="textEmailAddress"
              android:textColorHint="@color/colorPrimary" />

          <EditText
              android:id="@+id/edit_phone"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shapeedittextregistration"
              android:ems="10"
              android:hint="رقم التليفون"
              android:textColorHint="@color/colorPrimary" />

          <EditText
              android:id="@+id/edit_address"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shapeedittextregistration"
              android:ems="10"
              android:hint="مكان وجود الخدمة"
              android:inputType="textPersonName"
              android:textColorHint="@color/colorPrimary" />

          <EditText
              android:id="@+id/edit_tradename"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shapeedittextregistration"
              android:ems="10"
              android:hint="الإسم التجارى"
              android:inputType="textPersonName"
              android:textColorHint="@color/colorPrimary" />


          <EditText
              android:id="@+id/edit_about"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shapeedittextregistration"
              android:hint="عن مقدم الخدمة"
              android:textColorHint="@color/colorPrimary" />

      </LinearLayout>
      <Button
          android:layout_below="@+id/linear"
          android:id="@+id/button_register"
          android:layout_gravity="center"
          android:layout_width="118dp"
          android:layout_height="wrap_content"
          android:background="@drawable/shapecheckboxinlogin"
          android:text="دخول"
          android:textSize="25sp"
          android:layout_centerHorizontal="true"/>
  </RelativeLayout>

</ScrollView>