<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/sea">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterfaceServiceProvider.Profile"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="138dp"
            android:layout_height="124dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="26dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/text_name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:text="أحمد حسين سعد"
            android:textSize="22dp"
            android:background="@drawable/shapeedittextregistration"/>

        <RatingBar
            android:id="@+id/rate_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_name_profile"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="9dp"
            android:layout_toStartOf="@+id/image_profile"
            android:background="@drawable/shapeedittextregistration" />
        />

        <TextView
            android:id="@+id/text_service"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_below="@+id/image_profile"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="158dp"
            android:layout_marginEnd="18dp"
            android:text="نبذة عن مقدم الخدمة"
            android:textSize="16sp"
            android:background="@drawable/shapetextsimary"/>
        />

        <TextView
            android:id="@+id/text_shape"
            android:layout_width="364dp"
            android:gravity="center"
            android:layout_height="45dp"
            android:layout_below="@+id/text_service"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="10dp"
            android:text=""
            android:background="@drawable/shapeedittextregistration"/>
        />

        <TextView
            android:id="@+id/textservice"
            android:layout_width="176dp"
            android:layout_height="34dp"
            android:layout_below="@+id/text_shape"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="198dp"
            android:background="@drawable/shapeedittextregistration"
            android:text="أعمال مقدم الخدمة"
            android:textSize="16dp" />
        />

        <TextView
            android:id="@+id/text_add_image"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/text_service"
            android:layout_alignEnd="@+id/text_service"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/shapemainbutton"
            android:gravity="center"
            android:text="معرض الصور"
            android:textSize="12sp" />
        />

        <Button
            android:id="@+id/button_add_image"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/text_name_profile"
            android:layout_alignTop="@+id/text_add_image"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/shapemainbutton"
            android:text="إضافة"
            android:textSize="12sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:scrollbars="horizontal"
            android:layout_below="@+id/button_add_image"/>

        <TextView
            android:id="@+id/text_add_video"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/recycler_image"
            android:layout_alignEnd="@+id/image_profile"
            android:background="@drawable/shapemainbutton"
            android:gravity="center"
            android:text="معرض الفيديو"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_add_viedo"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/recycler_image"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/shapemainbutton"
            android:text="إضافة"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/button_add_viedo">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_viedo"
                android:layout_width="385dp"
                android:layout_height="112dp"
                android:layout_below="@+id/text_add_video"
                android:layout_alignStart="@+id/button_add_viedo"
                android:layout_marginStart="-30dp"
                android:layout_marginTop="2dp"
                android:scrollbars="horizontal" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
</ScrollView>