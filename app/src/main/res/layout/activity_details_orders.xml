<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewDetailsmain"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="13dp"
        android:background="@drawable/shapedetailsorders_texts"
        android:text="تفاصيل الطلب"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right|center"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="إسم الخدمة:"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/shapedetailsorders_texts"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_name_details"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="140dp"
        android:gravity="right|center"
        android:text="الاسم"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/shapedetailsorders_data"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="10dp"
        android:gravity="right|center"
        android:text="العنوان:"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/shapedetailsorders_texts"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_address_details"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="140dp"
        android:gravity="right|center"
        android:background="@drawable/shapedetailsorders_data"
        android:text="العنوان"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="10dp"
        android:gravity="right|center"
        android:text="إجمالى السعر:"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/shapedetailsorders_texts"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_totalprice_details"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="140dp"
        android:gravity="right|center"
        android:background="@drawable/shapedetailsorders_data"
        android:text="السعر"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_listofordersdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:gravity="center_horizontal"
        android:text="الخدمات"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/shapedetailsorders_data"
        android:textSize="20sp" />
</RelativeLayout>