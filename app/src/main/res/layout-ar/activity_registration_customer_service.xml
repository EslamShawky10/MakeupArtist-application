<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".InterfaceCustomerService.RegistrationCustomerServiceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="97dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="LIVE ARTIST"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="97dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="86dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/kk" />

        <TextView
            android:id="@+id/usertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:gravity="center"
            android:text="@string/registernewprovider"
            android:textSize="30sp" />


        <EditText
            android:id="@+id/editTextfirstnameuser"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="204dp"
            android:ems="10"
            android:hint="@string/firstnameuser"
            android:gravity="right"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextlastnameuser"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="204dp"
            android:ems="10"
            android:gravity="right"
            android:hint="@string/lastnameuser"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/editTextfirstnameuser">

            <EditText
                android:id="@+id/editTextemailuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:hint="@string/emailuser"
                android:inputType="textEmailAddress" />
            <EditText
                android:id="@+id/editTextpassworduser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:ems="10"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="textPassword"
                android:hint="@string/passworduser"
                />

            <EditText
                android:id="@+id/editTextnumberphoneuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="right"
                android:inputType="text|phone"
                android:gravity="right"
                android:hint="@string/phoneuser"
                />

        </LinearLayout>
        <Button
            android:id="@+id/button_registeruser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:layout_centerHorizontal="true"
            android:text="@string/loginFromRegisterUser" />
        />
    </RelativeLayout>
</ScrollView>