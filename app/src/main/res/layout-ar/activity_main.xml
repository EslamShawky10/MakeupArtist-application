<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mohamed"
    tools:context=".InterfaceServiceProvider.MainActivity"
    >
    <Button
        android:id="@+id/changeLanguase"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:textSize="8sp"
        android:text="@string/changeLanguase"
        android:background="@drawable/buttonlanguage"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="LIVE ARTIST"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/kk" />
    <Button
        android:id="@+id/button_service"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="49dp"
        android:layout_centerHorizontal="true"
        android:text="@string/serviceprovider"
        android:background="@drawable/shapemainbutton"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/button_customer"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="175dp"
        android:background="@drawable/shapemainbutton"
        android:text="@string/serviceowner"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/makemain" />

</RelativeLayout>