<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/mohamed">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InterfaceServiceProvider.Profile">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/text_name_profile"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/shapeedittextregistration"
            android:gravity="center"
            android:text="أحمد حسين سعد"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22dp" />

        <RatingBar
            android:id="@+id/rate_profile"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_name_profile"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/shapeedittextregistration" />
        />

        <TextView
            android:id="@+id/text_service"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/image_profile"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shapetextsimary"
            android:gravity="center"
            android:text="نبذة عن مقدم الخدمة"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />
        />

        <TextView
            android:id="@+id/text_shape"
            android:layout_width="364dp"
            android:layout_height="45dp"
            android:layout_below="@+id/text_service"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shapeedittextregistration"
            android:gravity="center"
            android:text="" />
        />

        <TextView
            android:id="@+id/textservice"
            android:layout_width="176dp"
            android:layout_height="34dp"
            android:layout_below="@+id/text_shape"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="198dp"
            android:background="@drawable/shapeedittextregistration"
            android:gravity="center"
            android:text="أعمال مقدم الخدمة"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />
        />

        <TextView
            android:id="@+id/text_add_image"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/text_service"
            android:layout_alignEnd="@+id/text_service"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/shapes"
            android:gravity="center"
            android:text="معرض الصور"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />
        />

        <Button
            android:id="@+id/button_add_image"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/text_add_image"
            android:layout_marginStart="10dp"
            android:background="@drawable/shapes"
            android:text="إضافة"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/button_add_image"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:scrollbars="horizontal" />

        <TextView
            android:id="@+id/text_add_video"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/recycler_image"
            android:layout_alignEnd="@+id/image_profile"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/shapes"
            android:gravity="center"
            android:text="معرض الفيديو"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_add_viedo"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/recycler_image"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shapes"
            android:text="إضافة"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_viedo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/button_add_viedo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:scrollbars="horizontal" />


    </RelativeLayout>
</ScrollView>